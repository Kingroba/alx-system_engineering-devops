#!/usr/bin/env bash
# This script generates an RSA key pair with 4096 bits and protects it with the passphrase 'betty'.

# Define variables
key_name="school"
key_bits=4096

# Generate RSA key pair
ssh-keygen -t rsa -b $key_bits -f ~/.ssh/$key_name -N "betty"

# Provide user feedback
echo "RSA key pair generated and protected with passphrase 'betty'."

